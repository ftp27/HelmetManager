<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               tools:context="ftp27.apps.helmet.mainActivity"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/portrate_logo_size">

        <ImageView
                android:layout_width="@dimen/portrate_logo_size"
                android:layout_height="@dimen/portrate_logo_size"
                android:id="@+id/imageLogo"
                android:src="@drawable/logo"
                android:layout_gravity="left" android:maxHeight="230px"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/app_name"
                        android:textSize="@dimen/land_logo_text_size"
                        android:id="@+id/textLogo"/>
                <TextView
                        android:id="@+id/textConType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Mobile"
                        android:textSize="@dimen/contype_port_text_size"/>
        </LinearLayout>

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ip"
                        android:textSize="@dimen/info_text_size"
                        android:textStyle="bold"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textIP"
                        android:textSize="@dimen/info_text_size"
                        android:text="192.168.1.1"
                        />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/port"
                        android:textSize="@dimen/info_text_size"
                        android:textStyle="bold"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textPort"
                        android:textSize="@dimen/info_text_size"
                        android:text="8080"
                        />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/passkey"
                        android:textSize="@dimen/info_text_size"
                        android:textStyle="bold"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textPasskey"
                        android:textSize="@dimen/info_text_size"
                        android:text="pass"
                        />
            </TableRow>
        </TableLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageMainCircle"
                    android:src="@drawable/red_button"
                    android:layout_margin="2dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/info_text_size"
                    android:gravity="center"
                    android:id="@+id/server_control"
                    android:text="@string/server"/>
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Start Server"
            android:id="@+id/startButton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Stop Server"
            android:id="@+id/stopButton" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="12dp"
        android:id="@+id/logView" />

</LinearLayout>
